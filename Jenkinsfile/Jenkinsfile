pipeline {
  environment{
    USER_CREDENTIAL = credentials('dockerhub-bago-js')
    DOCKER_REPOSITORY = 'https://registry.hub.docker.com'
    HELM_REPOSITORY = 'helm-internal'
    PROJECT_NAME = 'frontbagoimage'
    DEPLOY_CONTEXT = '/msBagoFrontend/'
    PROJECT_VERSION = 'latest'
  }

  agent {
    kubernetes {
      yaml '''
        apiVersion: v1
        kind: Pod
        metadata:
          labels:
            app: test
        spec:
          hostAliases:
          - ip: "192.168.5.67"
            hostnames:
              - "nexusdev.krugercorp.com"
          - ip: "192.168.5.67"
            hostnames:
              - "dockerdev.krugercorp.com"
          containers:
          - name: node
            env:
              - name: 'HOME'
                value: '.'
            image: node:16.17.0-alpine3.16
            command:
            - cat
            tty: true
          - name: docker
            image: docker:20.10.18-cli-alpine3.16
            command:
            - cat
            tty: true
            volumeMounts:
            - mountPath: /var/run/docker.sock
              name: docker-sock
          - name: helm
            image: alpine/helm:3.10.0
            command:
            - cat
            tty: true
          volumes:
          - name: docker-sock
            hostPath:
              path: /var/run/docker.sock
      '''
    }
  }
  stages {
    stage('Build and publish docker image') {
      when { expression { true } }
      steps {
        container('docker') {
          sh 'docker logout'
          sh 'docker build -t juanse793/frontbagoimage:latest .'
          // sh 'docker tag imagenprueba $USER_CREDENTIAL_USR/$PROJECT_NAME:$PROJECT_VERSION'
          sh 'docker image ls'
          sh 'docker login $DOCKER_REPOSITORY -u $USER_CREDENTIAL_USR -p $USER_CREDENTIAL_PSW'
          sh 'docker push $USER_CREDENTIAL_USR/$PROJECT_NAME:$PROJECT_VERSION'
          sh 'docker rmi $USER_CREDENTIAL_USR/$PROJECT_NAME:$PROJECT_VERSION'
        }
      }
    }
  }
}